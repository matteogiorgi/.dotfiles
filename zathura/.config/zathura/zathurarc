### Startup options
###################

set adjust-open width
set recolor false

set font "mononoki Nerd Font 9"
set first-page-column 2
set show-scrollbars
set smooth-scroll true

set window-title-basename "true"
set selection-clipboard "clipboard"

map <C-i> recolor




### Color theme
###############

set notification-error-bg   "#F66151"
set notification-error-fg   "#171421"
set notification-warning-bg "#E9AD0C"
set notification-warning-fg "#171421"
set notification-bg         "#D0CFCC"
set notification-fg         "#171421"

set completion-bg           "#171421"
set completion-fg           "#2A7BDE"
set completion-group-bg     "#171421"
set completion-group-fg     "#2A7BDE"
set completion-highlight-bg "#2A7BDE"
set completion-highlight-fg "#171421"

set index-bg                "#D0CFCC"
set index-fg                "#171421"
set index-active-bg         "#D0CFCC"
set index-active-fg         "#171421"

set inputbar-bg             "#171421"
set inputbar-fg             "#FFFFFF"
set statusbar-bg            "#171421"
set statusbar-fg            "#FFFFFF"

set highlight-color         "#ff9500"
set highlight-active-color  "#ad7fa8"

set default-bg              "#D0CFCC"
set default-fg              "#171421"

set render-loading          true
set render-loading-fg       "#D0CFCC"
set render-loading-bg       "#171421"

set recolor-darkcolor       "#D0CFCC"
set recolor-lightcolor      "#171421"
