#!/bin/sh -e

# Comment the following lines if you wanna
# open files in application based on file extension

case $1 in
    *.mp3|*.flac|*.wav)
        mplayer "$1"
    ;;
    *.mp4|*.mkv|*.webm)
        vlc "$1" 2>/dev/null &
    ;;
    *.png|*.gif|*.jpg|*.JPG|*.jpe|*.jpeg)
        if [ -f ~/.config/sxiv/supersxiv ]; then
            ~/.config/sxiv/supersxiv "$1" 2>/dev/null &
        else 
            sxiv "$1" 2>/dev/null &
        fi
    ;;
    *.pdf|*.djvu)
        zathura "$1" 2>/dev/null &
    ;;
    *)
        "${EDITOR:=vim}" "$1"
    ;;
esac




