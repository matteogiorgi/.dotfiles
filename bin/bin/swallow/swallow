#!/usr/bin/env sh

echo "$*" | grep "\.ar\." && {
    xdohide xterm -e "${EDITOR:=vim}" "$*" &
    exit
}

echo "$1" | grep "\.sent$" && {
    xdohide sent "$1" &
    exit
}


# qtfm, geany, mpv, zathura, sxiv, vim:
# pidof/pgrep sxiv || xdohide "sxiv -a" "$*"

case $(file --mime-type "$*" -bL) in
    inode/directory)
        xdohide "qtfm '$*'"
        ;;
    text/* | inode/x-empty | application/json | application/octet-stream)
        xdohide "geany -is '$*'"
        ;;
    audio/*)
        FILE=$*
        echo -e "PLAY: ${FILE##*/}\n¯¯¯¯"
        mpv "$FILE"
        ;;
    video/*)
        xdohide "mpv --force-window '$*'"
        ;;
    application/pdf | application/postscript | application/djvu | image/vnd.djvu | application/epub+zip)
        xdohide "zathura '$*'"
        ;;
    image/gif)
        if [ -f ~/.config/sxiv/supersxiv ]; then
            xdohide "~/.config/sxiv/supersxiv -a" "$*"
        else 
            xdohide "sxiv -a" "$*"
        fi
        ;;
    image/*)
        if [ -f ~/.config/sxiv/supersxiv ]; then
            xdohide "~/.config/sxiv/supersxiv" "$*"
        else 
            xdohide "sxiv" "$*"
        fi
        ;;
    *)
        "${EDITOR:=vim}" "$*"
        ;;
esac
