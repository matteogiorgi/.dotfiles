#!/usr/bin/env sh

echo "$*" | grep "\.ar\." && {
    xdohide xterm -e "$EDITOR" "$*" &
    exit
}

echo "$1" | grep "\.sent$" && {
    xdohide sent "$1" &
    exit
}

case $(file --mime-type "$*" -bL) in
    text/* | inode/x-empty | application/json | application/octet-stream)
        "$EDITOR" "$*"
        ;;
    inode/directory)
        pidof pcmanfm || xdohide pcmanfm "$*"
        ;;
    audio/* | video/*)
        pidof vlc || xdohide vlc "$*"
        ;;
    application/pdf | application/postscript | application/djvu)
        pidof zathura || xdohide zathura "$*"
        ;;
    image/gif)
        if [ -f ~/.config/sxiv/supersxiv ]; then
            pgrep ~/.config/sxiv/supersxiv || xdohide "~/.config/sxiv/supersxiv -a" "$*"
        else 
            pgrep sxiv || xdohide "sxiv -a" "$*"
        fi
        ;;
    image/*)
        if [ -f ~/.config/sxiv/supersxiv ]; then
            pgrep ~/.config/sxiv/supersxiv || xdohide "~/.config/sxiv/supersxiv" "$*"
        else 
            pgrep sxiv || xdohide "sxiv" "$*"
        fi
        ;;
esac
