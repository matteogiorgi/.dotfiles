#!/usr/bin/env bash

NAME=$(basename "$0")
VER="1.0"

usage()
{
    cat <<- EOF

 USAGE: $NAME [OPTIONS]
 OPTIONS:
     -h,--help                  Display this message
     -v,--version               Display script version
     -r,--reboot                Reboot system
     -p,--poweroff              Poweroff system
     -l,--lockscreen            Activate lockscreen
 Without any options the lockscreen will be activated.

EOF
}

for arg in "$@"; do
    case $arg in
        -h|--help)
            usage
            exit 0
            ;;
        -v|--version)
            echo -e "$NAME -- Version $VER"
            exit 0
            ;;
        -r|--reboot)
            systemctl reboot
            ;;
        -p|--poweroff)
            systemctl -i poweroff
            ;;
        -l|--lockscreen)
            slock
            ;;
    esac
done

(( $# == 0 )) && "$0" -l

exit 0
